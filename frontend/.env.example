# API Configuration
# Must be a valid HTTP/HTTPS URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket Configuration
# Must be a valid WS/WSS URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Feature Flags
# Enable/disable analytics (true/false)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable/disable debug mode (true/false)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# UI Configuration
# Maximum input length (100-10000 characters)
NEXT_PUBLIC_MAX_INPUT_LENGTH=2000

# Default timeout in seconds (30-3600)
NEXT_PUBLIC_DEFAULT_TIMEOUT=600
