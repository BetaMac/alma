# Backend Server Configuration
# Port must be between 1024 and 65535
PORT=8000

# Host must be a valid IP address or 'localhost'
HOST=0.0.0.0

# Debug mode (true/false)
DEBUG=false

# Model Configuration
# Must be a valid Hugging Face model ID
MODEL_ID="TheBloke/Mistral-7B-Instruct-v0.2-GGUF"

# Must be a .gguf or .bin file
MODEL_FILE="mistral-7b-instruct-v0.2.Q4_K_M.gguf"

# Number of layers to offload to GPU (0 or more)
GPU_LAYERS=50

# Maximum memory usage as percentage (0.1 to 1.0)
MAX_MEMORY_PERCENT=0.9

# Task Configuration
# Minimum timeout is 30 seconds
DEFAULT_TIMEOUT=600

# Maximum retries between 0 and 10
MAX_RETRIES=3

# CORS Settings
# Comma-separated list of allowed origins
# Must be valid URLs with scheme and domain
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
# Heartbeat interval in seconds (5-300)
WS_HEARTBEAT_INTERVAL=30
